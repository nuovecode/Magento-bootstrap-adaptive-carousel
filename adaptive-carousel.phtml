<?php $dom = new domDocument;?>
<div class="carousel bootstrap-slide">
    <div id="adaptive-carousel" class="slide carousel-inner">
    <?php for ($i = 1; ; $i++) { if ($i > 3) { break; } ?>
         <?php  if (Mage::getModel('cms/block')->load("slide_$i")->getIsActive()):?>

            <?php  $dom->loadHTML($this->getLayout()->createBlock("cms/block")->setBlockId("slide_$i")->toHtml());
                $dom->preserveWhiteSpace = false;
                $images = $dom->getElementsByTagName('img'); ?>

            <?php  foreach($images as $img) {  ?>
               <?php  $url = $img->getAttribute('src'); ?>
                <div class="item <?php if ($i==1) : ?>active<?php endif; ?>">
                   <div class="slide-image" style="background: url('<?php echo $url; ?>') no-repeat center center"></div>
                </div>
            <?php }  ?>

         <?php endif;?>
    <?php } ?>
   </div>
</div>







